{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "functions": {
    "api/admin/*.ts": {
      "memory": 1024,
      "maxDuration": 30,
      "includeFiles": "api/utils/**"
    },
    "api/**/*.ts": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "rewrites": [
    {
      "source": "/((?!api/).*)",
      "destination": "/index.html"
    }
  ]
}
